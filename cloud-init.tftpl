#cloud-config
repo_update: true
repo_upgrade: all

packages:
 - neo4j-enterprise

yum_repos:
  neo4j:
    name: neo4j enterprise
    base_url: http://yum.neo4j.com/stable/5
    enable_gpgcheck: true
    enabled: true
    gpgkey: https://debian.neo4j.com/neotechnology.gpg.key

runcmd:
 - [ sh, -c, "echo hello" ]

output : { all : '| tee -a /var/log/cloud-init-output.log' }

